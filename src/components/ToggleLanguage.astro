<div class="block w-max px-3 py-2">
  <button
    aria-label="Change language"
    class="language-button text-gray-900 hover:bg-gray-100 md:p-0 md:hover:bg-transparent md:hover:text-blue-600 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
  >
    <span>EN</span>
  </button>
</div>
<script>
  const languageButton = document.querySelector(".language-button");
  languageButton.addEventListener("click", () => toggleLanguage());

  function toggleLanguage() {
    if (
      localStorage.language === "es" ||
      (!("theme" in localStorage) && window.location.pathname.includes("/es/"))
    ) {
      window.location.assign("/en/");
      localStorage.language = "en";
      languageButton.innerHTML = `
       <span>ES</span>
`;
    } else {
      window.location.assign("/es/");
      localStorage.language = "es";
      languageButton.innerHTML = ` 
       <span>EN</span>
`;
    }
  }
</script>
