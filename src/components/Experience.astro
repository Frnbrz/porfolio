---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import Section from '../layouts/Section.astro'
import ExperienceComponent from './ExperienceComponent.astro'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const EXPERIENCE = [
  {
    time: '2023 - 2024',
    title: t('home.daw'),
    badge: t('badge.learn'),
    description: t('home.daw_description'),
  },
  {
    time: '2021 - 2023',
    title: t('home.cloudappi'),
    badge: t('badge.work'),
    description: t('home.cloudappi_description'),
  },
]
---

<Section title={t('home.experience')} id='experience'>
  <div class='mr-auto place-self-center lg:col-span-7'>
    <ol class='relative border-s border-gray-200 dark:border-gray-700'>
      {
        EXPERIENCE.map((experience, index) => (
          <ExperienceComponent {...experience} key={index} />
        ))
      }
    </ol>
  </div>
</Section>
