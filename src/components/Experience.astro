---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Section from "../layouts/Section.astro";
import ExperienceComponent from "./ExperienceComponent.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section title={t("home.experience")} id="experience">
  <div class="mr-auto place-self-center lg:col-span-7">
    <ol
      class="relative border-s border-gray-200 text-gray-500 dark:border-gray-800 dark:text-gray-100"
    >
      <ExperienceComponent
        title={t("home.daw")}
        badge="Learning"
        description={t("home.daw_description")}
      />
      <ExperienceComponent
        title={t("home.cloudappi")}
        badge="Working"
        description={t("home.cloudappi_description")}
      />
    </ol>
  </div>
</Section>
