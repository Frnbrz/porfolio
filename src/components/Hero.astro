---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import Curriculum from '../icons/Curriculum.astro'
import Github from '../icons/Github.astro'
import Gmail from '../icons/Gmail.astro'
import Linkdln from '../icons/Linkedin.astro'
import HeroIcon from './HeroIcon.astro'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section class='py-8 sm:py-6 md:py-16 lg:py-48 xl:gap-0 xl:py-16' id='top'>
  <div
    class='mx-auto flex justify-between align-middle sm:py-4 md:py-6 lg:flex-row lg:gap-5 lg:py-24 xl:gap-0'
  >
    <div class='lg:col-span-7'>
      <h1
        class='mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight dark:text-white md:text-5xl xl:text-6xl'
      >
        <span
          class='bg-gradient-to-tr from-blue-600 to-cyan-500 bg-clip-text text-transparent'
        >
          {t('home.hi')}
        </span>
        <span class='block text-gray-800 dark:text-gray-100'>
          {t('home.name')}
        </span>
      </h1>
      <p
        class='mb-6 max-w-2xl font-light text-gray-800 dark:text-gray-100 md:text-lg lg:mb-8 lg:text-2xl xl:text-4xl'
      >
        {t('home.description')}
      </p>
    </div>
    <div class='hidden lg:col-span-5 lg:mt-0 lg:flex'>
      <img
        src='/avatar.jpg'
        alt='avatar of frnbrz'
        class='h-20 w-20 rounded-3xl drop-shadow-xl filter lg:h-64 lg:w-64'
      />
    </div>
  </div>
  <div
    class='mx-auto px-4 text-center md:max-w-screen-md lg:max-w-screen-lg lg:px-3 xl:max-w-screen-xl xl:px-0'
  >
    <div
      class='mt-8 flex flex-grow-0 items-center justify-center sm:justify-between'
    >
      <HeroIcon
        href='https://www.linkedin.com/in/frnbrz/'
        ariaLabel='Link to Linkedin'
      >
        <Linkdln />
      </HeroIcon>
      <HeroIcon href='https://github.com/Frnbrz' ariaLabel='Link to Github'>
        <Github />
      </HeroIcon>
      <HeroIcon href='mailto:frnbrz@gmail.com' ariaLabel='mailto my mail'>
        <Gmail />
      </HeroIcon>
      <HeroIcon
        href='/francisco-briz-frontend.pdf'
        ariaLabel='curriculum vitae'
        isDownload
      >
        <Curriculum />
      </HeroIcon>
    </div>
  </div>
</section>
