---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import Badge from './Badge.astro'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
interface Props {
  href: string
  name: string
  tags: string[]
}

const { href, name, tags } = Astro.props

const title = `project.${name}.title`
const description = `project.${name}.description`
---

<a
  href={href}
  target='_blank'
  class='col-span-5 block max-w-sm rounded-lg border border-gray-200 p-6 shadow hover:bg-blue-100 dark:border-gray-700 dark:hover:bg-blue-500'
>
  <h5
    class='mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white'
  >
    {t(title)}
  </h5>
  <p class='font-normal text-gray-700 dark:text-gray-300'>
    {t(description)}
  </p>

  <div class='flex flex-wrap gap-1 pt-5'>
    {tags.map(tag => <Badge>{tag}</Badge>)}
  </div>
</a>
