---
interface Props {
  href?: string;
}

const { href } = Astro.props;
---

<li>
  {
    href ? (
      <div class="block px-3 py-2">
        <a
          href={href}
          class=" rounded text-gray-900 hover:bg-gray-100 md:p-0 md:hover:bg-transparent md:hover:text-blue-600 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent md:dark:hover:text-blue-500"
        >
          <slot />
        </a>
      </div>
    ) : (
      <slot />
    )
  }
</li>
